# =============================================================================
# Arizona Adventure Agent - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.template .env
# =============================================================================

# =============================================================================
# REQUIRED: LLM Provider API Keys
# =============================================================================

# OpenAI API Key (REQUIRED - at minimum for fallback models)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (REQUIRED if using Anthropic models like Claude)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# LLM Model Configuration
# =============================================================================

# Default OpenAI model (fallback if agent-specific model not configured)
OPENAI_MODEL=gpt-4o-mini

# Default Anthropic model (used if not overridden per-agent)
ANTHROPIC_MODEL=claude-haiku-3

# Default temperature for all models (0.0-2.0, higher = more creative)
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Per-Agent Model Assignments (Optional - overrides defaults)
# =============================================================================
# Uncomment and modify to assign specific models to agents
# Format: AGENT_MODEL_{AGENT_NAME}=model_name
# 
# Model options:
#   OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, etc.
#   Anthropic: claude-haiku-3, claude-sonnet-3.5, claude-opus-3
#
# Default assignments (if not set):
#   - orchestrator, planning, synthesis: claude-sonnet-3.5
#   - trail, route_planning, bikepacking, safety, permits: claude-haiku-3
#   - geo, weather, accommodation, food, etc.: claude-haiku-3
#   - All location agents: claude-haiku-3

# High-complexity agents (premium models recommended)
# AGENT_MODEL_ORCHESTRATOR=claude-sonnet-3.5
# AGENT_MODEL_PLANNING=claude-sonnet-3.5
# AGENT_MODEL_SYNTHESIS=claude-sonnet-3.5

# Medium-complexity agents
# AGENT_MODEL_TRAIL=claude-haiku-3
# AGENT_MODEL_ROUTE_PLANNING=claude-haiku-3
# AGENT_MODEL_BIKEPACKING=claude-haiku-3
# AGENT_MODEL_SAFETY=claude-haiku-3
# AGENT_MODEL_PERMITS=claude-haiku-3

# Low-complexity agents
# AGENT_MODEL_GEO=claude-haiku-3
# AGENT_MODEL_WEATHER=claude-haiku-3
# AGENT_MODEL_ACCOMMODATION=claude-haiku-3
# AGENT_MODEL_FOOD=claude-haiku-3
# AGENT_MODEL_TRANSPORTATION=claude-haiku-3
# AGENT_MODEL_GEAR=claude-haiku-3
# AGENT_MODEL_COMMUNITY=claude-haiku-3
# AGENT_MODEL_PHOTOGRAPHY=claude-haiku-3
# AGENT_MODEL_HISTORICAL=claude-haiku-3
# AGENT_MODEL_BLM=claude-haiku-3
# AGENT_MODEL_ADVOCACY=claude-haiku-3

# Location agents (all use claude-haiku-3 by default)
# AGENT_MODEL_JEROME=claude-haiku-3
# AGENT_MODEL_SEDONA=claude-haiku-3
# AGENT_MODEL_PRESCOTT=claude-haiku-3
# AGENT_MODEL_FLAGSTAFF=claude-haiku-3
# ... (see Config._AGENT_MODEL_DEFAULTS for all location agents)

# =============================================================================
# LangSmith Configuration (Optional - for observability and tracing)
# =============================================================================

# Enable LangSmith tracing
LANGCHAIN_TRACING_V2=false

# LangSmith endpoint (usually don't need to change)
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# LangSmith API key (get from: https://smith.langchain.com/)
LANGCHAIN_API_KEY=your_langsmith_api_key_here

# LangSmith project name
LANGCHAIN_PROJECT=arizona-adventure-agent

# =============================================================================
# External API Keys (Optional - for enhanced features)
# =============================================================================

# Tavily API Key (for web search capabilities)
# Get from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# OpenCage Geocoding API (optional, falls back to free Nominatim if not set)
# Get from: https://opencagedata.com/
OPENCAGE_API_KEY=your_opencage_api_key_here

# OpenWeather API (optional, falls back to free Weather.gov for US locations)
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Google Places API (for accommodations, restaurants, etc.)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Recreation.gov API (for campgrounds and recreation areas)
# Falls back to "public" key if not set (rate-limited)
# Get from: https://ridb.recreation.gov/
RECREATION_GOV_API_KEY=your_recreation_gov_api_key_here

# =============================================================================
# Affiliate Configuration (Optional)
# =============================================================================

# Base URL for affiliate partner links (for gear recommendations)
AFFILIATE_BASE_URL=https://example.com/affiliate

# =============================================================================
# Checkpointing Configuration
# =============================================================================

# Checkpointer type: "memory", "sqlite", "postgres", or "none"
# Default: "none" (LangGraph API handles checkpointing automatically)
CHECKPOINTER_TYPE=none

# Database URL for SQLite or Postgres checkpointers
# SQLite example: sqlite:///checkpoints.db
# Postgres example: postgresql://user:password@localhost/dbname
CHECKPOINTER_DB_URL=

# =============================================================================
# Human-in-the-Loop Configuration
# =============================================================================

# Enable human review checkpoints (requires checkpointer)
# Default: false
ENABLE_HUMAN_REVIEW=false

# =============================================================================
# Data Archiving Configuration
# =============================================================================

# Archive type: "sqlite", "json", or "none"
# Default: "json" (simple file-based archiving)
ARCHIVE_TYPE=json

# Database path for SQLite archiving
ARCHIVE_DB_PATH=

# Directory for JSON archiving
ARCHIVE_DIR=adventure_archive

# =============================================================================
# Caching and Rate Limiting
# =============================================================================

# Enable caching (default: true)
ENABLE_CACHING=true

# Enable rate limiting (default: true)
ENABLE_RATE_LIMITING=true

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_DEFAULT_TTL=3600

# Maximum cache size in entries (default: 1000)
CACHE_MAX_SIZE=1000

# =============================================================================
# Graph Execution Configuration
# =============================================================================

# Maximum number of concurrent nodes (default: unlimited)
# Set to a number to limit parallel execution for resource-constrained environments
# Leave empty or unset for unlimited
MAX_CONCURRENCY=

